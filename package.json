{
	"name": "lucid-events",
	"version": "0.0.5",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "dist/index.umd.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./style": "./dist/style.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/d-kls/lucid-events"
	},
	"keywords": [
		"react",
		"events",
		"event system",
		"tracing"
	],
	"scripts": {
		"build": "npm run build:clean && tsc -p tsconfig.build.json && vite build && npm run build:copy",
		"build:clean": "ts-node --esm scripts/clean.ts",
		"build:copy": "ts-node --esm scripts/copy.ts",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx}'",
		"format": "prettier --write src//**/*.{ts,tsx,css} --config ./.prettierrc",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test": "vitest",
		"coverage": "vitest run --coverage"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.21.8",
		"@storybook/addon-essentials": "7.0.8",
		"@storybook/addon-interactions": "7.0.8",
		"@storybook/addon-links": "7.0.8",
		"@storybook/addon-styling": "^1.0.6",
		"@storybook/blocks": "7.0.8",
		"@storybook/react": "7.0.8",
		"@storybook/react-vite": "7.0.8",
		"@storybook/testing-library": "0.0.14-next.2",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@types/babel__core": "^7.20.0",
		"@types/node": "^20.0.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitejs/plugin-react": "^4.0.0",
		"@vitest/coverage-c8": "^0.31.0",
		"autoprefixer": "^10.4.14",
		"babel-loader": "^8.3.0",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.3.4",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"jsdom": "^22.0.0",
		"path": "^0.12.7",
		"postcss": "^8.4.23",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"prop-types": "15.8.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "7.0.8",
		"tailwindcss": "^3.3.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.3.2",
		"vite-plugin-dts": "^2.3.0",
		"vitest": "^0.31.0"
	},
	"dependencies": {
		"@hpcc-js/wasm": "^2.13.0",
		"@radix-ui/react-accordion": "^1.1.1",
		"@radix-ui/react-icons": "^1.3.0",
		"@radix-ui/react-popover": "1.0.5",
		"@radix-ui/react-scroll-area": "^1.0.3",
		"@radix-ui/react-tabs": "^1.0.3",
		"uuid": "^9.0.0"
	}
}
